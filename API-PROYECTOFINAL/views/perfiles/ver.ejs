<div class="col-12">
    <h1>Perfiles</h1>
    <table class="table table-bordered">
        <thead>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Edad</th>
            <th>Ubicacion</th>
            <th>Acerca de</th>
            <th>Editar</th>
            <th>Borrar</th>
        </thead>
        <tbody>
        <% perfiles.forEach(perfil =>{ %>
            <tr>
                    <td><%= perfil.nombre%></td>
                    <td><%= perfil.apellido_pat %></td>
                    <td><%= perfil.apellido_mat %></td>
                    <td><%= perfil.edad %></td>
                    <td><%= perfil.ubicacion %></td>
                    <td><%= perfil.acercade %></td>
                    <td><a href="/perfiles/editar/<%= perfil.id_perfil %>" class="btn btn-warning">Editar</a>
                    <td><a href="/perfiles/eliminar/<%= perfil.id_perfil %>" class="btn btn-warning">Eliminar</a>
                    </td>
            </tr>
            <% }) %>    
        </tbody>
        <a href="/perfiles/agregar" class="btn btn-warning">Agregar perfil</a>

    </table>
</div>